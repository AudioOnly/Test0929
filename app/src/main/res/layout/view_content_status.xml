<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vision.yao.test.views.MaterialProgressBar
        android:id="@+id/v_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#999"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/vg_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableTop="@android:color/transparent"
            android:gravity="center"
            android:textColor="#999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/v_failed"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_btn_default"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/csv_again"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>