<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.vision.yao.test.views.SmartTabLayout
        android:id="@+id/stl"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        app:stl_clickable="false"
        app:stl_customTabTextLayoutId="@layout/item_guide_point"
        app:stl_dividerColor="@android:color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="true"
        app:stl_indicatorColor="#8a8a8a"
        app:stl_indicatorCornerRadius="5dp"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="5dp"
        app:stl_underlineColor="@android:color/transparent"
        app:stl_underlineThickness="0dp">

    </com.vision.yao.test.views.SmartTabLayout>
</RelativeLayout>
